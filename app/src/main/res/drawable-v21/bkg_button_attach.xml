<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/grey_500">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <padding
                android:bottom="@dimen/android_space_small"
                android:top="@dimen/android_space_small"
                android:left="@dimen/android_space_medium"
                android:right="@dimen/android_space_medium" />
            <solid android:color="@color/grey_200" />
            <corners android:radius="1dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <padding
                android:bottom="@dimen/android_space_small"
                android:top="@dimen/android_space_small"
                android:left="@dimen/android_space_medium"
                android:right="@dimen/android_space_medium" />
            <solid android:color="@color/grey_300" />
            <corners android:radius="1dp" />
        </shape>
    </item>
</ripple>